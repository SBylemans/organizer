    android:orientation="vertical"
    android:scrollbars="vertical">

    <Button 
        android:id="@+id/Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AddButton"/>
</LinearLayout>

</ScrollView>
